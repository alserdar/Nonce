<android.support.design.internal.ForegroundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:weightSum="2"
    android:id="@+id/facebookSocialLayout"
    tools:context="twitter.nonce_app.socail.SocislBars$FacebookActivityForLogin">


    <android.support.design.internal.ForegroundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:weightSum="2"
        android:id="@+id/layoutUpdateStatus">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:id="@+id/countTweet"
            android:gravity="end"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:background="@drawable/text_custom"
            android:hint="@string/what_s_on_your_mind"
            android:imeOptions="actionDone"
            android:gravity="top"
            android:textColor="@color/black"
            android:id="@+id/updateStatusFacebook"/>

    </android.support.design.internal.ForegroundLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_custome"/>

    <android.support.design.internal.ForegroundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:background="?attr/selectableItemBackground"
        android:gravity="end|center"
        android:id="@+id/layoutSaveUpdateStatus">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gone_grey"
            android:text="@string/saveDetails"
            android:id="@+id/saveUpdateStatus"/>

    </android.support.design.internal.ForegroundLinearLayout>

    <android.support.design.internal.ForegroundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:visibility="gone"
        android:id="@+id/gotoLoginFacebookLayout">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_custom"
            android:text="@string/let_s_login_with_facebook"
            android:drawableEnd="@mipmap/facebook"
            android:drawableRight="@mipmap/facebook"
            android:id="@+id/letsLoginFacebook"/>
    </android.support.design.internal.ForegroundLinearLayout>


</android.support.design.internal.ForegroundLinearLayout>

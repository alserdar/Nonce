<?xml version="1.0" encoding="utf-8"?>
<android.support.design.internal.ForegroundLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="2"
    android:id="@+id/twitterSocialLayout">

    <android.support.design.internal.ForegroundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:id="@+id/layoutTweet"
        android:orientation="vertical"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:id="@+id/countTweet"
            android:gravity="end"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:background="@drawable/text_custom"
            android:hint="@string/what_will_happen"
            android:imeOptions="actionDone"
            android:gravity="top"
            android:maxLength="140"
            android:textColor="@color/black"
            android:id="@+id/tweetTwitter"/>

    </android.support.design.internal.ForegroundLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_custome"/>

    <android.support.design.internal.ForegroundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:background="?attr/selectableItemBackground"
        android:gravity="end|center"
        android:id="@+id/layoutSaveTweet">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saveDetails"
            android:background="@drawable/gone_grey"
            android:id="@+id/saveTweet"/>

    </android.support.design.internal.ForegroundLinearLayout>

    <android.support.design.internal.ForegroundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:visibility="gone"
        android:id="@+id/gotoLoginTwitterLayout">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_custom"
            android:text="@string/let_s_login_with_twitter"
            android:drawableEnd="@mipmap/twitter"
            android:drawableRight="@mipmap/twitter"
            android:id="@+id/letsLoginTwitter"/>
    </android.support.design.internal.ForegroundLinearLayout>



</android.support.design.internal.ForegroundLinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.design.internal.ForegroundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    android:keepScreenOn="true"
    tools:context="twitter.nonce_app.call_someone.CallShowTime">
    <android.support.design.internal.ForegroundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5"
        android:orientation="vertical">
        <TextView
            android:id="@+id/alarm_screen_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/eventname"
            android:textSize="20sp"/>

        <android.support.design.internal.ForegroundLinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="2"
            android:weightSum="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/extraDataUp"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight=".75"
                android:layout_gravity="center_horizontal|center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/extraDataDown"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight=".75"
                android:layout_gravity="center_horizontal|center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/extraInfo"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight=".75"
                android:layout_gravity="center_horizontal|center_vertical"
                />

        </android.support.design.internal.ForegroundLinearLayout>


        <android.support.design.internal.ForegroundLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="2">
            <TextView
                android:id="@+id/alarm_screen_time"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="@string/timeforshowtime"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/alarm_screen_date"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="@string/dateforshowtime"
                android:textSize="22sp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_weight="1"/>
        </android.support.design.internal.ForegroundLinearLayout>

        <android.support.design.internal.ForegroundLinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="bottom"
            android:weightSum="5">

            <android.support.design.internal.ForegroundLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:background="?android:attr/selectableItemBackground">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_custom"
                    android:textColor="@android:color/white"
                    android:id="@+id/repeat_screen_button"
                    android:layout_margin="5dp"/>
            </android.support.design.internal.ForegroundLinearLayout>

            <android.support.design.internal.ForegroundLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:background="?android:attr/selectableItemBackground">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:id="@+id/alarm_screen_button"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_custom" />

            </android.support.design.internal.ForegroundLinearLayout>

        </android.support.design.internal.ForegroundLinearLayout>
    </android.support.design.internal.ForegroundLinearLayout>
</android.support.design.internal.ForegroundLinearLayout>
